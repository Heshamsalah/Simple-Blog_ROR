<!-- Render the errors for the new and edit forms -->

<% if @post.errors.any? %>
  <div id="errors">
    <h2> <%= pluralize(@post.errors.count, "error") %> Prevented saving.</h2>
    <ul>
      <% @post.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>
  </div>
<% end %>
