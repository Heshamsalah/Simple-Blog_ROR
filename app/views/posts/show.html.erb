<div id="post_content">
  <h1 class="title">
    <%= @post.title %>
  </h1>

  <p class="date">
    Created At: <%= time_ago_in_words(@post.created_at) %> ago.
    <% if user_signed_in? %>
      | <strong style="color: green;"><%= link_to "Edit", edit_post_path(@post) %></strong>
      | <strong style="color: red;"><%= link_to "Delete", post_path(@post), method: :delete, data: {confirm: "Are you sure?"}%></strong>
    <% end %>
  </p>

  <p class="body">
    <%= simple_format @post.body %>
    <%= image_tag @post.picture.url if @post.picture? %>
  </p>

  <hr>
  <p>
    Tags: <strong style="color: blue;"><%= get_post_tags(@post) %></strong>
  </p>
  <div id="comments">
    <h2><%= @post.comments.count %> comments</h2>
    <%= render @post.comments %>
    <% if user_signed_in? %>
      <h3>Add a comment</h3>
      <%= render "comments/form" %>
    <% end %>
  </div>
</div>
